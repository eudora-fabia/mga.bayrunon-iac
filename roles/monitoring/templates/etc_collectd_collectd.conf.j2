BaseDir "/etc/collectd"

LoadPlugin syslog
LoadPlugin interface
LoadPlugin load
LoadPlugin memory
LoadPlugin df
LoadPlugin rrdtool
LoadPlugin apache
LoadPlugin uptime

<Plugin "apache">
   <Instance "apache80">
       URL "http://localhost/server-status?auto"
   </Instance>
</Plugin>

<Plugin "cpu">
    ValuesPercentage true
</Plugin>

<Plugin interface>
    Interface "eth0"
    IgnoreSelected false
</Plugin>

<Plugin "df">
    IgnoreSelected false
    MountPoint "/"
</Plugin>

<Plugin rrdtool>
  DataDir "{{ rrdtool_datadir }}"
</Plugin>
